{
  "name": "@gbg/specs-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/specs-core/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/specs-core",
        "configFile": "packages/specs-core/vite.config.ts"
      }
    },
    "build:lens": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["packages/specs-core/lenses/init/Packages/specs-core"],
      "options": {
        "commands": [
          "mkdir -p packages/specs-core/lenses/init/Packages/specs-core",
          "cp dist/packages/specs-core/index.cjs.js packages/specs-core/lenses/init/Packages/specs-core/",
          "cp dist/packages/specs-core/index.d.ts packages/specs-core/lenses/init/Packages/specs-core/",
          "echo 'âœ“ Copied build artifacts to Lens Studio Packages folder'"
        ],
        "parallel": false
      }
    },
    "watch:lens": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build specs-core --watch"
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
